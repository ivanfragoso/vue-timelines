{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "es2015",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "es5",
      "lib": [
        "esnext",
        "dom"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
    ],
    "exclude": [
      "node_modules"
    ]
  }